<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/DIMEN_300dp"
        android:layout_height="@dimen/DIMEN_400dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/integral"
        android:layout_gravity="center" />
        <TextView
            android:id="@+id/integral_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/DIMEN_40dp"
            android:text="恭喜获得 5 个积分"
            android:textColor="#fbbc48"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/integral_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/DIMEN_10dp"
            android:text="连续签到第一天"
            android:textColor="#aebace"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_integral"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_46dp"
            android:layout_marginBottom="@dimen/DIMEN_60dp"
            android:layout_marginLeft="@dimen/DIMEN_40dp"
            android:layout_marginRight="@dimen/DIMEN_40dp"
            android:layout_marginTop="@dimen/DIMEN_60dp"
            android:background="@drawable/bg_button"
            android:text="我知道了"
            android:textColor="#ffffff"
            android:textSize="16sp" />

</LinearLayout>
</android.support.v7.widget.CardView >

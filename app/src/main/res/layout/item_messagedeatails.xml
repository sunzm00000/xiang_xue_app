<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/DIMEN_10dp">
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/DIMEN_20dp"
        android:layout_gravity="center"
        android:visibility="gone">
    <TextView
        android:id="@+id/txt_messagedeatails_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/DIMEN_20dp"
        android:paddingRight="@dimen/DIMEN_20dp"
        android:text="2017-03-29 11:26"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:paddingTop="@dimen/DIMEN_5dp"
        android:paddingBottom="@dimen/DIMEN_5dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_messagedeatails_time"/>

    <TextView
        android:id="@+id/txt_messagedeatails_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/DIMEN_20dp"
        android:paddingRight="@dimen/DIMEN_20dp"
        android:text="了群聊您邀请了虞美人、爱钓鱼加入了群聊"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:paddingTop="@dimen/DIMEN_5dp"
        android:layout_marginTop="@dimen/DIMEN_10dp"
        android:paddingBottom="@dimen/DIMEN_5dp"
        android:layout_gravity="center"

        android:background="@drawable/bg_messagedeatails_name"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/llimg"
            android:layout_width="@dimen/DIMEN_40dp"
            android:layout_height="@dimen/DIMEN_40dp"
            android:src="@mipmap/sos_icon"
            android:layout_marginLeft="@dimen/DIMEN_20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/DIMEN_50dp"
        android:layout_marginLeft="@dimen/DIMEN_10dp"
        android:layout_marginTop="@dimen/DIMEN_18dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfa"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
            android:background="@drawable/bg_left_message"
          android:padding="@dimen/DIMEN_10dp"
          android:textColor="#132234"
          android:textSize="15sp"
          android:text="这个假期大家有什么安排呀"/>
         <ProgressBar
             android:layout_width="@dimen/DIMEN_10dp"
             android:layout_height="@dimen/DIMEN_10dp"
             android:visibility="gone"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="@dimen/DIMEN_5dp"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_left_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/DIMEN_20dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img_left_avatar"
            android:layout_width="@dimen/DIMEN_40dp"
            android:layout_height="@dimen/DIMEN_40dp"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:src="@mipmap/sos_icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/DIMEN_50dp"
            android:layout_marginLeft="@dimen/DIMEN_10dp"
            android:layout_marginTop="@dimen/DIMEN_18dp"
            >
            <TextView
                android:id="@+id/nickname"
                android:textSize="12sp"
                android:textColor="#73809e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/DIMEN_10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_left_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_left_message"
                android:padding="@dimen/DIMEN_10dp"
                android:text="有"
                android:textColor="#22a6ef"
                android:textSize="15sp"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/img_left_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:visibility="gone" />
            <ProgressBar
                android:id="@+id/left_mProgressBar"
                android:layout_width="@dimen/DIMEN_10dp"
                android:layout_height="@dimen/DIMEN_10dp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_5dp" />
        </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_20dp"
        >
        <ImageView
            android:id="@+id/img_right_avatar"
            android:layout_width="@dimen/DIMEN_40dp"
            android:layout_height="@dimen/DIMEN_40dp"
            android:src="@mipmap/sos_icon"
            android:visibility="visible"
            android:layout_marginRight="@dimen/DIMEN_20dp"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_18dp"
            android:layout_marginRight="@dimen/DIMEN_10dp"
            android:layout_toLeftOf="@+id/img_right_avatar">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/txt_right_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_10dp"
            android:background="@drawable/bg_right_message"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone"
            android:text="有"
            />
            <ImageView
                android:id="@+id/img_right_message"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:visibility="gone"
            />
        </LinearLayout>
            <ProgressBar
                android:id="@+id/right_mProgressBar"
            android:layout_toLeftOf="@+id/layout"
            android:layout_width="@dimen/DIMEN_10dp"
            android:layout_height="@dimen/DIMEN_10dp"
                android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_5dp"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
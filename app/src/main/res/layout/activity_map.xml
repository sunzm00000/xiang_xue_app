<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="#aaffffff"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.fishingport.app.ui.activity.MapActivity">
    <include layout="@layout/layout_titlebar"
        android:visibility="gone"
        ></include>
    <com.tianditu.android.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"></com.tianditu.android.maps.MapView>
    <RelativeLayout
        android:id="@+id/btn_tarck"
        android:layout_width="@dimen/DIMEN_140dp"
        android:layout_height="@dimen/DIMEN_40dp"
        android:background="@drawable/shape_raectang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/DIMEN_40dp"
        >
        <RelativeLayout
            android:id="@+id/nearport"
            android:layout_width="@dimen/DIMEN_65dp"
            android:layout_height="@dimen/DIMEN_30dp"
            android:background="@drawable/bg_button"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fill"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/tarck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/page"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <!--总里程、航行时间、航行速度布局开始-->
    <RelativeLayout
        android:id="@+id/totalView"
        android:layout_width="@dimen/DIMEN_300dp"
        android:layout_height="@dimen/DIMEN_76dp"
        android:background="@drawable/shape_shipp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_tarck"
        android:layout_marginTop="20dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/DIMEN_37dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0km"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总里程"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="航行时间"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_37dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0km/h"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="航行速度"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </RelativeLayout>
    <!--总里程、航行时间、航行速度布局结束-->
    <!--下方三个控制按钮，地位，开始记录，缩放-->
    <RelativeLayout
        android:id="@+id/ji"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#00000000"
        android:layout_above="@+id/tab"
        android:layout_marginBottom="@dimen/DIMEN_30dp"
        >
        <!--定位开始-->
        <LinearLayout
            android:id="@+id/location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/bg_locationpage"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/DIMEN_16dp"
                android:layout_height="@dimen/DIMEN_16dp"
                android:src="@mipmap/locationpage" />
        </LinearLayout>
        <!--定位结束-->

        <!--开始记录开始-->
        <LinearLayout
            android:id="@+id/record"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_locationpage"
            android:gravity="center">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_locationpage"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始记录"
                    android:gravity="center"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <!--开始记录结束-->
        <!--缩放开始-->
        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="67dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:background="@drawable/bg_cotraller">
            <LinearLayout
                android:id="@+id/jia"
                android:layout_width="37dp"
                android:layout_height="32dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jia"
                    android:layout_gravity="center" />
            </LinearLayout>
            <View
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:layout_gravity="center"
                ></View>
            <LinearLayout
                android:id="@+id/jian"
                android:layout_width="37dp"
                android:layout_height="34dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jian"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--缩放结束-->
    </RelativeLayout>

    <include
        layout="@layout/custom_tab"
         />
</RelativeLayout>

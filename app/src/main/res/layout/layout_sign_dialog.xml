                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_25dp"
                            android:src="@mipmap/signbackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_45dp"
                            android:gravity="center"
                            android:text="已领取"
                            android:textColor="#FBE448"
                            android:textSize="7sp" />
                    </android.support.v7.widget.CardView>
                </FrameLayout>
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_20dp"
                android:text="签到可获得 5 个积分"
                android:textColor="#fbbc48"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_10dp"
                android:text="连续签到至第七天可得双倍积分"
                android:textColor="#aebace"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_sin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_46dp"
                android:layout_marginBottom="@dimen/DIMEN_60dp"
                android:layout_marginLeft="@dimen/DIMEN_40dp"
                android:layout_marginRight="@dimen/DIMEN_40dp"
                android:layout_marginTop="@dimen/DIMEN_40dp"

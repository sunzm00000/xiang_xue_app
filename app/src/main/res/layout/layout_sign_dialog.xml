                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/DIMEN_10dp"
                android:layout_marginTop="@dimen/DIMEN_10dp"
                android:src="@mipmap/de_dialog_icon" />
            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/DIMEN_40dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/DIMEN_52dp"
                        android:layout_height="@dimen/DIMEN_64dp"
                        app:cardCornerRadius="@dimen/DIMEN_5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_integral_sign"
                            android:gravity="center"
                            android:paddingBottom="@dimen/DIMEN_3dp"
                            android:paddingTop="@dimen/DIMEN_3dp"
                            android:text="第一天"
                            android:textColor="#ffffff"
                            android:textSize="8sp" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_28dp"
                            android:src="@mipmap/integral_dan_icon" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/sign_one"
                        android:layout_width="@dimen/DIMEN_52dp"
                        android:layout_height="@dimen/DIMEN_64dp"
                        app:cardBackgroundColor="#80000000"
                        app:cardCornerRadius="@dimen/DIMEN_5dp"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_25dp"
                            android:src="@mipmap/signbackground" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_45dp"
                            android:gravity="center"
                            android:text="已领取"
                            android:textColor="#FBE448"
                            android:textSize="7sp" />
                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/DIMEN_52dp"
                        android:layout_height="@dimen/DIMEN_64dp"
                        android:layout_marginLeft="@dimen/DIMEN_12dp"
                        app:cardCornerRadius="@dimen/DIMEN_5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_integral_sign"
                            android:gravity="center"
                            android:paddingBottom="@dimen/DIMEN_3dp"
                            android:paddingTop="@dimen/DIMEN_3dp"
                            android:text="第二天"
                            android:textColor="#ffffff"
                            android:textSize="8sp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_28dp"
                            android:src="@mipmap/integral_dan_icon" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/sign_two"
                        android:layout_width="@dimen/DIMEN_52dp"
                        android:layout_height="@dimen/DIMEN_64dp"
                        android:layout_marginLeft="@dimen/DIMEN_12dp"
                        app:cardCornerRadius="@dimen/DIMEN_5dp"
                        app:cardBackgroundColor="#80000000"
                        android:visibility="gone"

                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_25dp"
                            android:src="@mipmap/signbackground" />

                        <TextView

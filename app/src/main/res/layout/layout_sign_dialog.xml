                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/sign_six"
                        android:layout_width="@dimen/DIMEN_52dp"
                        android:layout_height="@dimen/DIMEN_64dp"
                        android:layout_marginLeft="@dimen/DIMEN_12dp"
                        app:cardCornerRadius="@dimen/DIMEN_5dp"
                        app:cardBackgroundColor="#80000000"
                        android:visibility="gone"

                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_25dp"
                            android:src="@mipmap/signbackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_45dp"
                            android:gravity="center"
                            android:text="已领取"
                            android:textColor="#FBE448"
                            android:textSize="7sp" />
                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/DIMEN_52dp"
                        android:layout_height="@dimen/DIMEN_64dp"
                        android:layout_marginLeft="@dimen/DIMEN_12dp"
                        app:cardCornerRadius="@dimen/DIMEN_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_integral_sign"
                            android:gravity="center"
                            android:paddingBottom="@dimen/DIMEN_3dp"
                            android:paddingTop="@dimen/DIMEN_3dp"
                            android:text="第七天"
                            android:textColor="#ffffff"
                            android:textSize="8sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/DIMEN_25dp"
                            android:src="@mipmap/integral_duo_icon" />

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/sign_seven"
                        android:layout_width="@dimen/DIMEN_52dp"
                        android:layout_height="@dimen/DIMEN_64dp"
                        android:layout_marginLeft="@dimen/DIMEN_12dp"
                        app:cardCornerRadius="@dimen/DIMEN_5dp"

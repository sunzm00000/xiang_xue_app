<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#f7faff">

    <include
        layout="@layout/layout_titlebar"/>
    <LinearLayout
        android:id="@+id/layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/txt_modify_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:text="备注名"
        android:textColor="#73809e"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/DIMEN_15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"/>

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="添加备注名"
        android:gravity="top"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/guangbiao"
        android:textColor="#132234"
        android:textColorHint="#cccccc"
        android:padding="@dimen/DIMEN_15dp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1dp"
            android:background="#eef1f6"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_gender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_marginTop="@dimen/DIMEN_20dp"
        android:paddingLeft="@dimen/DIMEN_20dp"
        >
        <RadioButton
            android:id="@+id/btn_nan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="男"
            android:textSize="14sp"
            android:textColor="#132234"
            android:gravity="center_vertical"/>
        <RadioButton
            android:id="@+id/btn_nv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="女"
            android:textSize="14sp"
            android:textColor="#132234"
            android:gravity="center_vertical"/>
    </RadioGroup>

    <TextView
        android:id="@+id/txt_birthday"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:layout_marginTop="@dimen/DIMEN_20dp"
        android:paddingLeft="@dimen/DIMEN_20dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#132234"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wh"
    android:orientation="vertical"
    tools:context="com.example.fishingport.app.ui.activity.WeatherDetailsaActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none"
       >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/bg_kong"
       android:layout_marginTop="@dimen/DIMEN_20dp"
       >
      <RelativeLayout
          android:id="@+id/layout_back"
          android:layout_width="50dp"
          android:layout_height="50dp">
         <ImageView
             android:layout_width="@dimen/DIMEN_24dp"
             android:layout_height="@dimen/DIMEN_16dp"
             android:src="@mipmap/back_icon"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/DIMEN_20dp"/>
      </RelativeLayout>

      <TextView
          android:id="@+id/txt_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="天气预报"
          android:textSize="17sp"
          android:textColor="#ffffff"
          android:layout_centerInParent="true"/>
      <TextView
          android:id="@+id/txt_right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="标题"
          android:textSize="15sp"
          android:textColor="#ffffff"
          android:visibility="gone"
          android:layout_marginRight="@dimen/DIMEN_20dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"/>

      <ImageView
          android:id="@+id/img_right"
          android:layout_width="@dimen/DIMEN_29dp"
          android:layout_height="@dimen/DIMEN_18dp"
          android:src="@mipmap/ic_launcher"
          android:visibility="gone"
          android:layout_marginRight="@dimen/DIMEN_15dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"/>
   </RelativeLayout>
    <ImageView
        android:id="@+id/nowimg"
       android:layout_width="68dp"
       android:layout_height="39dp"
       android:src="@mipmap/sun_home_icon"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/DIMEN_40dp"
       />
   <TextView
       android:id="@+id/city"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="#ffffff"
       android:textSize="24sp"
       android:text="朝阳区"
       android:gravity="center"
       android:layout_marginTop="@dimen/DIMEN_20dp"
       />
   <TextView
       android:id="@+id/now"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="#ffffff"
       android:textSize="24sp"
       android:text="16℃"
       android:gravity="center"
       android:layout_marginTop="@dimen/DIMEN_20dp"
       />
      <android.support.v7.widget.RecyclerView
          android:id="@id/mRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          >
      </android.support.v7.widget.RecyclerView>


   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="@dimen/DIMEN_20dp"
       android:background="#ffffff"
       ></View>
   <TextView
       android:id="@+id/content"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/DIMEN_20dp"
       android:textColor="#ffffff"
       android:textSize="15sp"
       android:text="asdfsadfsafdasdfasdfasdfasdfas"
       />
   </LinearLayout>
   </ScrollView>
</LinearLayout>

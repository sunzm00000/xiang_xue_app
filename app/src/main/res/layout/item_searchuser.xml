<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_75dp"
    >

    <RelativeLayout
        android:id="@+id/layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="里约000"
            android:textColor="#172434"
            android:textSize="17sp"
            android:layout_marginTop="@dimen/DIMEN_5dp"
            android:layout_alignTop="@+id/img_user"
            android:layout_marginLeft="@dimen/DIMEN_10dp"
            android:layout_toRightOf="@+id/img_user"/>
        <TextView
            android:id="@+id/txt_user_autograph"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/DIMEN_20dp"
            android:layout_height="wrap_content"
            android:text="我是渔港大亨，哈哈哈"
            android:textColor="#172434"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/DIMEN_5dp"
            android:layout_alignBottom="@+id/img_user"
            android:layout_marginLeft="@dimen/DIMEN_10dp"
            android:layout_toRightOf="@+id/img_user"/>



        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/DIMEN_55dp"
            android:layout_height="@dimen/DIMEN_55dp"
            android:src="@mipmap/sos_icon"
            android:layout_marginLeft="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"

            />


    </RelativeLayout>

</RelativeLayout>
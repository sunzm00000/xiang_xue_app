<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cpb_background"
    >
    <com.example.fishingport.app.widget.CustomVideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/DIMEN_40dp"
        android:paddingLeft="@dimen/DIMEN_40dp"
        android:layout_toRightOf="@+id/include"
        android:layout_toEndOf="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_46dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/DIMEN_248dp"
            android:background="@drawable/bg_userinfo_edit">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/profile_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_25dp"/>
            <EditText
                android:id="@+id/edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/DIMEN_15dp"
                android:background="@null"
                android:hint="手机号"
                android:textCursorDrawable="@drawable/guangbiao"
                android:textColorHint="#ffffff"
                android:layout_gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_46dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/DIMEN_15dp"
            >
            <LinearLayout
                android:layout_width="@dimen/DIMEN_177dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bg_userinfo_edit"
                android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/code_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_25dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/DIMEN_15dp"
                    android:background="@null"
                    android:hint="验证码"
                    android:textColorHint="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textCursorDrawable="@drawable/guangbiao"
                    android:id="@+id/edit_check" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="获取验证码"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_46dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/DIMEN_15dp"
            android:background="@drawable/bg_userinfo_edit">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/unlock_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/DIMEN_25dp"/>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_15dp"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:textCursorDrawable="@drawable/guangbiao"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
    </LinearLayout>
       <Button
           android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_46dp"
            android:background="@drawable/bg_button"
            android:layout_marginTop="@dimen/DIMEN_15dp"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/DIMEN_15dp">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="@dimen/DIMEN_15dp"
                android:layout_height="@dimen/DIMEN_15dp"
                android:background="@drawable/bg_checkbox"
                android:button="@null"
                android:checked="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_10dp"
                android:text="注册代表您已同意《渔网通》隐私协议"
                android:textColor="#ffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_below="@+id/layout_content">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号?"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>
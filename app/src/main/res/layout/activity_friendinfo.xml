<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7faff"
    android:id="@+id/layout"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <include
        layout="@layout/layout_titlebar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"
        android:layout_marginTop="@dimen/DIMEN_11dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_90dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/DIMEN_60dp"
            android:layout_height="@dimen/DIMEN_60dp"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/user_avatar_icon"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/img_avatar"
            android:layout_alignTop="@+id/img_avatar"
            android:layout_marginLeft="@dimen/DIMEN_15dp"
            android:layout_marginTop="@dimen/DIMEN_8dp"
            >
            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#132234"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="美羊羊"/>
            <ImageView
                android:id="@+id/sex"
                android:layout_width="7.2dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@mipmap/nanimg"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_user_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#132234"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/img_avatar"
            android:layout_alignBottom="@+id/img_avatar"
            android:layout_marginLeft="@dimen/DIMEN_15dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:layout_marginBottom="@dimen/DIMEN_8dp"
            android:text="这个家伙很懒，没有留下简介"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"
        android:layout_marginTop="@dimen/DIMEN_11dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/DIMEN_20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="#132234"/>
            <TextView
                android:id="@+id/txt_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/DIMEN_46dp"
                android:layout_gravity="center_vertical"
                android:textColor="#132234"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1dp"
            android:background="#eef1f6"
            android:layout_marginLeft="@dimen/DIMEN_20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_90dp"
            android:layout_marginLeft="@dimen/DIMEN_20dp">
            <TextView
                android:id="@+id/dongtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="动态"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="#132234"/>
            <LinearLayout
                android:id="@+id/btn_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/DIMEN_46dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/dongtai"
                android:layout_toLeftOf="@+id/iimg"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    >
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <ImageView
                android:id="@+id/iimg"
                android:layout_width="@dimen/DIMEN_8dp"
                android:layout_height="@dimen/DIMEN_14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/DIMEN_10dp"
                android:src="@mipmap/arrow_icon" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1dp"
            android:background="#eef1f6"
           />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_46dp"
        android:background="@drawable/bg_button"
        android:layout_margin="@dimen/DIMEN_40dp"
        android:text="加好友"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:id="@+id/btn_login" />

</LinearLayout>
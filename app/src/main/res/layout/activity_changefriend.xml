<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7faff"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.fishingport.app.ui.activity.ChangefriendActivity">
    <include
        layout="@layout/layout_titlebar"/>
    <LinearLayout
        android:id="@+id/layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_modify_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50dp"
            android:text="备注名"
            android:textColor="#73809e"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/DIMEN_15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1dp"
            android:background="#eef1f6"/>

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:hint="添加备注名"
            android:gravity="top"
            android:textSize="15sp"
            android:textColor="#132234"
            android:textCursorDrawable="@drawable/guangbiao"
            android:textColorHint="#cccccc"
            android:padding="@dimen/DIMEN_15dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1dp"
            android:background="#eef1f6"/>
    </LinearLayout>

</LinearLayout>

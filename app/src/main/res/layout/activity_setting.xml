<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef1f6"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <include
        layout="@layout/layout_titlebar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"
        android:layout_marginTop="@dimen/DIMEN_20dp"/>
    <RelativeLayout
        android:id="@+id/about_me"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:paddingRight="@dimen/DIMEN_20dp"
        android:paddingLeft="@dimen/DIMEN_20dp">

        <ImageView
            android:layout_width="@dimen/DIMEN_8dp"
            android:layout_height="@dimen/DIMEN_14dp"
            android:src="@mipmap/arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#132234"
            android:text="关于我们"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_setting"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"

        />
    <RelativeLayout
       android:id="@+id/rlcache"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:paddingRight="@dimen/DIMEN_20dp"
        android:paddingLeft="@dimen/DIMEN_20dp">

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="@dimen/DIMEN_8dp"
            android:layout_height="@dimen/DIMEN_14dp"
            android:src="@mipmap/arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/DIMEN_10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_arrow"
            android:textColor="#7ed321"
            android:text="2.5M"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#132234"
            android:text="清除缓存"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_setting"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_46dp"
        android:background="@drawable/bg_button"
       android:layout_margin="@dimen/DIMEN_30dp"
        android:text="退出"
        android:textColor="#ffffff"
        android:textSize="16sp"
        />

</LinearLayout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef1f6"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.fishingport.app.ui.activity.Common_ProblemsActivity">

    <RelativeLayout
        android:id="@+id/layout_relo"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50dp"
        android:paddingRight="@dimen/DIMEN_20dp"
        android:paddingLeft="@dimen/DIMEN_20dp">

        <ImageView
            android:layout_width="@dimen/DIMEN_8dp"
            android:layout_height="@dimen/DIMEN_14dp"
            android:src="@mipmap/arrow_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/question_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#132234"
            android:text="登录注册"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_setting"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1dp"
        android:background="#eef1f6"

        />

</LinearLayout>